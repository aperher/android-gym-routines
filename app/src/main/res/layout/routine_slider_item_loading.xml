<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <View
        android:id="@+id/tvSliderTitle"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:background="#AAAAAA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSliderTitle">

        <include layout="@layout/routine_item_loading" />

        <include layout="@layout/routine_item_loading" />

        <include layout="@layout/routine_item_loading" />

        <include layout="@layout/routine_item_loading" />

    </LinearLayout>

    <View
        android:id="@+id/tvShowAll"
        android:layout_width="55dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toBottomOf="@+id/tvSliderTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSliderTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>